<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="290dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    >

    <LinearLayout
        android:id="@+id/layout_rate"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kopi Tubruk"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginTop="70dp"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rate"
            android:paddingVertical="5dp"
            android:paddingHorizontal="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/baseline_star_24"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="16sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$4.55"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_coffee"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/american_classic"
        app:layout_constraintStart_toStartOf="@id/layout_rate"
        app:layout_constraintEnd_toEndOf="@id/layout_rate"
        app:layout_constraintTop_toTopOf="@id/layout_rate"
        app:layout_constraintBottom_toTopOf="@id/layout_rate"
        />

</androidx.constraintlayout.widget.ConstraintLayout>